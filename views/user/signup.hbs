<div class="container">
            <form action="/signup" method="post">
        <div class="card">
            <a class="singup">Sign Up</a>
            <div class="inputBox1">
                <input type="text" required name="email">
                <span class="user">Email</span>
            </div>

            <div class="inputBox">
                <input type="text" required name="userName">
                <span>Username</span>
            </div>

            <div class="inputBox">
                <input type="number" required name="phoneNumber" >
                <span>Phone number</span>
            </div>
            <div class="inputBox">
                <input type="password" required name="password">
                <span>Password</span>
            </div>
             <label for="" class="status">work status</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="workstatus" id="flexRadioDefault1" value="fresher">
            <label class="form-check-label" for="flexRadioDefault1" class="fresher">
                fresher
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="workstatus" id="flexRadioDefault2" value="working"
                checked>
            <label class="form-check-label" for="flexRadioDefault2" class="working">
                working
            </label>
        </div>

            <button class="enter">Enter</button>

        </div>
            </form>
    </div>